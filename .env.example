# Docker Compose Environment Variables

# PostgreSQL Configuration
POSTGRES_DB=keepstash
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_PORT=5432

# API Configuration
APP_NAME=keepstash
APP_PREFIX=/api
CLIENT_URL=http://localhost
ALLOWED_ORIGINS=http://localhost,http://localhost:80

# Better Auth Configuration
BETTER_AUTH_URL=http://localhost/api/auth
BETTER_AUTH_SECRET=your-secret-key-min-32-chars-long-here

# Web Configuration
WEB_PORT=80
VITE_APP_NAME=keepstash
VITE_API_URL=
VITE_API_PREFIX=/api
VITE_ENABLE_ROOT_REDIRECT=true

# Optional: OpenAPI file path
OPENAPI_FILE_PATH=./openapi.json
