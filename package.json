{
  "name": "keepstash",
  "version": "0.1.0",
  "description": "A modern bookmark management application",
  "private": true,
  "keywords": [
    "bookmarks",
    "bookmark-manager",
    "monorepo",
    "nestjs",
    "react",
    "vite"
  ],
  "author": "khaledxyz <me@khaledxyz.com> (https://github.com/khaledxyz)",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/khaledxyz/keepstash.git"
  },
  "bugs": {
    "url": "https://github.com/khaledxyz/keepstash/issues"
  },
  "homepage": "https://github.com/khaledxyz/keepstash#readme",
  "scripts": {
    "dev": "pnpm --parallel dev & pnpm dev:watch-sdk",
    "dev:web": "pnpm --filter web dev",
    "dev:api": "pnpm --filter api dev",
    "build": "pnpm --recursive build",
    "build:web": "pnpm --filter web build",
    "build:api": "pnpm --filter api build",
    "start:web": "pnpm --filter web start",
    "start:api": "pnpm --filter api prod",
    "lint": "ultracite check",
    "lint:fix": "ultracite fix"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.11",
    "@types/node": "^25.0.3",
    "chokidar-cli": "^3.0.0",
    "lefthook": "^2.0.13",
    "lint-staged": "^16.2.7",
    "ultracite": "6.5.0"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,jsonc,css,scss,md,mdx}": [
      "pnpm dlx ultracite fix"
    ]
  },
  "engines": {
    "node": ">=22.0.0",
    "pnpm": ">=10.24.0"
  },
  "packageManager": "pnpm@10.24.0"
}
