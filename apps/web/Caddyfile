:80 {
    encode gzip
    root * /srv/dist

    @static {
        path *.js *.css *.png *.jpg *.jpeg *.gif *.svg *.ico *.woff *.woff2 *.ttf *.eot *.webp
    }
    handle @static {
        header Cache-Control "public, max-age=31536000, immutable"
        file_server
    }

    handle {
        try_files {path} /index.html
        file_server
    }

    log {
        output stdout
        format console
        level INFO
    }
}